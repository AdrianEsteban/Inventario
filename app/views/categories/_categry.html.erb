


  

 <div class="row center-xs middle-xs"> 

  <% @products.each do |product| %>
    <div class="col-md-4 col-md-offset-1 altura">
      
      <div class="row ">
          <%= image_tag product.image.url(:medium),class: "img-responsive img-rounded" %>
          <div class="col-md-10">
            <div class="row">
              <div class="col-md-6 col-md-offset-4">
                 <h3 > <%= product.name %><br></h1>
              </div> 
            </div>
            <div class="row">
              <div class="col-md-11 col-md-offset-1">
                <h5>Descripcion <%= product.description %><br></h5>
                <h5>Existencias <%= product.quantity %><br></h5>              
                <h5>Precio <%= product.cost %><br></h5>
              </div>
            </div>                        
          </div>          
      </div> 

      <div class="row">
        <div class="col-md-6 col-md-offset-3">          
          <%= link_to 'Editar', edit_product_path(product) %>
          <td><%= link_to 'Detalles', product %></td>
                                 
        </div>
      </div> 
      <div class="row"> 
        <div class="col-md-11 col-md-offset-1">  
          <%= link_to("Entrada de productos", "/products/#{product.id}/entry", class: "btn btn-success btn-sm") %>      
          <% if product.quantity > 6%>
            <% url = "/products/#{product.id}/output" %>   
            <%= link_to("Salida de productos", url,class: "btn btn-danger btn-sm") %>
            <% else %> 
              
              <%= link_to("Salida de producto", "javascript: alertProducts('/products/#{product.id}/output')", class: "btn btn-danger btn-sm" ) %>

                                     
         <%end %>          
        </div>
      </div>
      
    </div></br>
  <% end %>

 </div> <br><br>
 <%=javascript_include_tag 'products-bundle'%>

